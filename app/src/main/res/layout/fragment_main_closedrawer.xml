<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.step3.CloseDrawerFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/main_closedrawer_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/green"
                    android:textSize="24sp"
            />

        </LinearLayout>

        <TextView
                android:id="@+id/main_closedrawer_step3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="-64dp"
                android:layout_marginHorizontal="60dp"
                android:background="@drawable/bg_green"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/main_closedrawer_step"
        />

        <TextView
                android:id="@+id/text_opendrawer_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="36sp"
                android:text="@string/main_closedrawer_title"
        />

        <ImageView
                android:layout_marginTop="-40dp"
                android:src="@drawable/collector_closed"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:id="@+id/imageView_main_step3"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/main_closedrawer_title"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
