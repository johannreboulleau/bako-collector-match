<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.step3.CloseDrawerFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/main_closedrawer_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/green"
                    android:textSize="24sp"
            />

        </LinearLayout>

        <ImageView
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/collector_closed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView_main_step3_deposit"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/main_closedrawer_title"
        />

        <ImageView
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/error_deposit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView_main_step3_error"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/main_closedrawer_title"
        />

        <ImageView
                android:layout_marginTop="-40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/error_technical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView_main_step3_error_technical"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/main_closedrawer_title"
                android:visibility="gone"
        />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="119dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">
        <TextView
                android:text="@string/main_bottomBar_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_contact_support"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
