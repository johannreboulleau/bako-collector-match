<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.step4.VoucherFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

        <ImageView
                android:layout_marginTop="8dp"
                android:src="@drawable/voucher"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView_main_step5"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:contentDescription="@string/main_voucher_title"
        />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="119dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp">
        <TextView
                android:text="@string/main_bottomBar_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_contact_support"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
